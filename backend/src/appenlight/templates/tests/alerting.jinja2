{% extends "/layout.jinja2" %}
{% block page_title %}
    <h1 class="page-title">{{ _('Alerting') }}</h1>
{% endblock %}


{% block content %}

    <div class="col-sm-10">
        <h2>Alerting test</h2>
        {% for channel in alert_channels %}
            <div>
                {{ channel.channel_visible_value }} ::
                <a href="{{ request.current_route_url(_query={"user_name":channel.user_name,
                "channel_name":channel.channel_name,
                "channel_value":channel.channel_value,
                "event_name":"error_report_alert"}) }}"> Error alert</a>
                -
                <a href="{{ request.current_route_url(_query={"user_name":channel.user_name,
                "channel_name":channel.channel_name,
                "channel_value":channel.channel_value,
                "event_name":"slow_report_alert"}) }}"> Slow alert</a>
                -
                <a href="{{ request.current_route_url(_query={"user_name":channel.user_name,
                "channel_name":channel.channel_name,
                "channel_value":channel.channel_value,
                "event_name":"notify_reports"}) }}"> Report notification</a>
                -
                <a href="{{ request.current_route_url(_query={"user_name":channel.user_name,
                "channel_name":channel.channel_name,
                "channel_value":channel.channel_value,
                "event_name":"notify_uptime"}) }}"> Uptime</a>
                -
                <a href="{{ request.current_route_url(_query={"user_name":channel.user_name,
                "channel_name":channel.channel_name,
                "channel_value":channel.channel_value,
                "event_name":"daily_digest"}) }}"> Digest</a>

                -
                <a href="{{ request.current_route_url(_query={"user_name":channel.user_name,
                "channel_name":channel.channel_name,
                "channel_value":channel.channel_value,
                "event_name":"chart_alert"}) }}"> Chart alert</a>
            </div>
        {% endfor %}
    </div>


{% endblock %}
